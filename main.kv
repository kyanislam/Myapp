Screen:
    MDCard:
        size_hint: None, None
        size: 680,1400
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        elevation: 10
        padding: 2
        spacing: 100
        orientation: 'vertical'

        MDLabel:
            id: wl
            text: "Welcome"
            font_size: 60
            halign: 'center'
            size_hint_y : None
            height: self.texture_size[1]
            padding_y:15

        
        MDTextFieldRound:
            id:usr
            hint_text: "user name"
            icon_right:"account"
            size_hint_x: None
            width:300
            font_size:30
            pos_hint:{"center_x":.5}
            

        MDTextFieldRound:
            id:passwd
            hint_text:"enter password"
            icon_right:"eye-off"
            size_hint_x: None
            width:340
            font_size:30
            pos_hint:{"center_x":.5}
            password:True 


        MDRoundFlatButton:
            text:"Login"
            font_size:30
            pos_hint:{"center_x":.5}
            
            on_press: app.log()

        MDRoundFlatButton:
            text:"Clean"
            font_size:30
            pos_hint:{"center_x":.5}
            
            on_press: app.clean()

        Widget:
            size_hint_y:None
            height:300